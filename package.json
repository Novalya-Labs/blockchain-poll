{
  "name": "blockchain-poll",
  "version": "1.0.0",
  "description": "Blockchain Poll",
  "main": "index.ts",
  "private": true,
  "workspaces": ["packages/*"],
  "scripts": {
    "dev:server:hardhat": "yarn workspace @blockchain-poll/server deploy:node",
    "dev:client": "yarn workspace @blockchain-poll/client dev",
    "dev:server": "yarn workspace @blockchain-poll/server dev",
    "build:client": "yarn workspace @blockchain-poll/client build",
    "build:server": "yarn workspace @blockchain-poll/server build",
    "start:client": "yarn workspace @blockchain-poll/client preview",
    "start:server": "yarn workspace @blockchain-poll/server start",
    "lint": "biome lint .",
    "format": "biome format . --write"
  },
  "keywords": [
    "blockchain",
    "poll",
    "voting",
    "typescript",
    "react",
    "tailwindcss",
    "pwa",
    "blockchain-poll",
    "blockchain-voting",
    "blockchain-poll-voting"
  ],
  "author": "Novalya Labs",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
